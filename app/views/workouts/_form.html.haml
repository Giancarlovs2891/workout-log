= simple_form_for(@workout, html: {class: 'form-horizontal' }) do |f|
  = f.input :date, lanel: "Date"
  = f.input :workout, lanel: "What area did you workout?", input_html: { class: "form-control" }
  = f.input :mood, lanel: "How were you feeling?", input_html: { class: "form-control" }
  = f.input :length, lanel: "How long was the workout?", input_html: { class: "form-control" }
  %br/
  = f.submit
